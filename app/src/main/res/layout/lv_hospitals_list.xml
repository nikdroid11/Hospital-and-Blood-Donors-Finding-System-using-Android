<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_rv_hospitals_list"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/grey"
        app:cardElevation="16dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/img_lv_hospital_image"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_lv_hospital_name"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/abc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_lv_hospital_specialty"
                android:textSize="12sp"
                android:textColor="@color/middle_grey"
                android:textStyle="italic"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_marginTop="4dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_lv_hospital_hours"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/time_icon"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif-condensed-medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_lv_hospital_contact_no"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/mobile_icon"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif-condensed-medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_lv_hospital_address"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/address_icon"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif-condensed-medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>